{
  "compilerOptions": {
    "target": "ES6",                    
    "module": "CommonJS",                
    "outDir": "./dist",                  
    "rootDir": "./src",                  
    "strict": true,                      
    "noImplicitAny": true,               
    "esModuleInterop": true,             
    "moduleResolution": "Node",          
    "sourceMap": true,                   
    "resolveJsonModule": true,           
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],                    
  "exclude": ["node_modules"]            
}

    
   

